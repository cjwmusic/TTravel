<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/write_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <RelativeLayout
            android:id="@+id/switch_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grayLevel6"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/switch_image"
                android:layout_width="27dp"
                android:layout_height="50dp"
                android:src="@drawable/switch_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:scaleType="fitCenter"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_toLeftOf="@id/switch_image"
                android:textSize="16sp"
                android:textColor="@color/write_bg"
                android:text="切换到游客模式"/>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>