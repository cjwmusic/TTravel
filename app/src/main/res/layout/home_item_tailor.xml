<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/write_bg"
        android:layout_gravity="center_horizontal">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/album_image"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/home_image_placeholder"/>

        <TextView
            android:id="@+id/prod_name"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="长江三日游"
            android:singleLine="true"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_below="@+id/album_image"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="敏敏小家"
            android:textSize="14dp"
            android:singleLine="true"
            android:textColor="@color/grayLevel2"
            android:layout_below="@+id/prod_name"
            android:layout_alignLeft="@+id/prod_name"
            android:layout_alignStart="@+id/prod_name"
            android:layout_marginTop="8dp"
            />
        
        <TextView
            android:id="@+id/order"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="成交量52"
            android:textSize="14dp"
            android:textColor="@color/grayLevel2"
            android:layout_toRightOf="@+id/nick_name"
            android:layout_alignBaseline="@+id/nick_name"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分"
            android:textSize="14dp"
            android:textColor="@color/grayLevel2"
            android:layout_toRightOf="@+id/order"
            android:layout_alignBaseline="@+id/order"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/start0"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/home_star_active"
            android:layout_below="@+id/prod_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/score_text"
             />

        <ImageView
            android:id="@+id/start1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/home_star_active"
            android:layout_below="@+id/prod_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/start0"
            />

        <ImageView
            android:id="@+id/start2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/home_star_active"
            android:layout_below="@+id/prod_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/start1"
            />

        <ImageView
            android:id="@+id/start3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/home_star_active"
            android:layout_below="@+id/prod_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/start2"
            />

        <ImageView
            android:id="@+id/start4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/home_star_inactive"
            android:layout_below="@+id/prod_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/start3"
            />



        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignBottom="@+id/album_image"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-28dp"
            android:layout_marginRight="22dp"
            fresco:roundingBorderColor="@color/write_bg"
            fresco:roundingBorderWidth="2dp"
            fresco:roundedCornerRadius="28dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/price"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/album_image"
            android:layout_marginBottom="17dp"
            android:background="@drawable/home_price_bg"
            android:text="￥1 ~ ￥9999"
            android:textSize="17dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/write_bg"/>
        
        <TextView
            android:layout_width="69dp"
            android:layout_height="25dp"
            android:background="@drawable/home_tip_bg"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/write_bg"
            android:textSize="12dp"
            android:text="新人"
            />






    </RelativeLayout>
</LinearLayout>